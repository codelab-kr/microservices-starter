<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">

    <title>FlixTube: Login</title>

    <link rel="stylesheet" href="/css/tailwind.min.css">
    <link rel="stylesheet" href="/css/app.css">
</head>

<body>
    <script src="js/login.js"></script>

    <div class="flex flex-col">
        <div class="border-b-2 bg-gray-100">
            <div class="nav flex flex-row items-center mt-1 p-2">
                <div class="text-xl font-bold">
                    FlixTube
                </div>
            </div>
        </div>

        <div class="m-4">
            <div class="m-4">
                <form class="login-form" id="login-form" method="post" action="/login">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" class="mt-2" required ><br>
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" class="mt-2" required><br>
                    <button type="submit" class="mt-2">Login</button>
                </form>
            </div>
        </div>
        {{#if error}}
        <div class="m-4">
            <div class="m-4">
                <div class="text-red-600">
                    {{error}}
                </div>
            </div>
        </div>
        {{/if}}
</body>

</html>