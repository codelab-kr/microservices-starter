pipeline {
    agent { 
        node {
            label 'docker-agent'
        }
    }

    stages {
        def image
        stage('Clone repository') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo "Building"
                // sh "docker build -t ap-seoul-1.ocir.io/cnqphqevfxnp/${STAGE}-${SERVICE} -f apps/${SERVICE}/Dockerfile  --target ${STAGE} ."
                script {
                    image = docker.build("ap-seoul-1.ocir.io/cnqphqevfxnp/${STAGE}-${SERVICE}", "-f apps/${SERVICE}/Dockerfile --target ${STAGE} .")
                }
            }
        }

        stage('Test') {
            steps {
                echo "Testing"
                // sh '''
                //     cd apps/${SERVICE}
                //     yarn test ${SERVICE}
                // '''
                script {
                    image.inside {
                        sh 'yarn test users'
                    }
                }
            }
        }

        stage('Deliver') {
            steps {
                echo 'Deliver'
                script {
                    docker.withRegistry('https://ap-seoul-1.ocir.io', 'ocir-seoul') {
                    // docker.withRegistry('https://register.hub.docker.com', 'docker-hub') { 
                        image.push($TAG)
                    }
                }
                // sh 'docker push ap-seoul-1.ocir.io/cnqphqevfxnp/${STAGE}-${SERVICE}:${TAG}'
                
            }
        }
    }
}